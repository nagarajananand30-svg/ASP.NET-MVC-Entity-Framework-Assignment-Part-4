@model CarInsurance.Models.Insuree

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>
        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>
        <dt>Email</dt>
        <dd>@Model.EmailAddress</dd>
